{
  "compilerOptions": {
    "types": ["node", "@wdio/globals/types", "@wdio/mocha-framework"],
    "allowJs": true,
    "module": "NodeNext",
    "noEmit": true,
    "paths": {
      "~/*": ["./*"]
    },
    "resolveJsonModule": true
  },
  "exclude": [".cache", ".public", ".server", "node_modules"],
  "include": ["**/*.cjs", "**/*.js"]
}
