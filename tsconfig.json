{
  "compilerOptions": {
    "types": ["node", "@wdio/globals/types", "@wdio/mocha-framework"],
    "checkJs": true,
    "allowJs": true,
    "strict": true,
    "target": "es2022",
    "baseUrl": "./",
    "module": "NodeNext",
    "noEmit": true,
    "paths": {
      "~/*": ["./*"]
    },
    "resolveJsonModule": true
  },
  "exclude": [".cache", ".public", ".server", "node_modules"],
  "include": [
    "**/*.cjs",
    "**/*.js",
    ".eslintrc.*",
    ".prettierrc.*",
    ".lintstagedrc.*"
  ]
}
